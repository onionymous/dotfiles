[module/date]
content-foreground = ${colors.fg}
content-background = ${colors.fg-alt}

type = internal/date
interval = 1

date = "%a %d/%m"
date-alt = "%a %d %b %Y "

time = "%I:%M %p"
time-alt = %r

;format-prefix = î€–
;format-prefix-foreground = ${colors.fg-alt}

label = "%{A3:gsimplecal &:}%date% %time%%{A}"
label-background = ${colors.fg-alt}
label-padding = 3


[module/customdate]
type = custom/script
interval = 1

exec = date +'%d %B %Y %r'
label-foreground = ${colors.fg}
label-background = ${colors.fg-alt}
label-padding = 3

click-left = gsimplecal



[module/battery]
type = internal/battery

; This is useful in case the battery never reports 100% charge
; full-at = 99

; Use the following command to list batteries and adapters:
; $ ls -1 /sys/class/power_supply/
battery = BAT1
adapter = ACAD

; If an inotify event haven't been reported in this many
; seconds, manually poll for new values.
;
; Needed as a fallback for systems that don't report events
; on sysfs/procfs.
;
; Disable polling by setting the interval to 0.
;
; Default: 5
poll-interval = 5

format-charging = "â€ƒ <animation-charging> <label-charging>"
format-discharging = "â€ƒ <ramp-capacity> <label-discharging>"

format-full-prefix = "îˆº "
format-full-prefix-foreground = ${colors.blue}

ramp-capacity-0 = îˆ¶ 
ramp-capacity-1 = îˆ· 
ramp-capacity-2 = îˆ¸ 
; î‰‚ î‰ƒ î‰„ î‰… î‰† î‰‡ î‰ˆ î‰‰ î‰Š î‰‹

; ramp-capacity-foreground = ${colors.red}

label-charging = %percentage%%
label-discharging = %percentage%%

animation-charging-0 = îˆ¶
animation-charging-1 = îˆ·
animation-charging-2 = îˆº
; animation-charging-foreground = ${colors.green}
animation-charging-framerate = 750

format-charging-foreground = #FFFFFF
format-charging-background = ${colors.red}
format-charging-padding = 0
format-discharging-foreground = #FFFFFF
format-discharging-background = ${colors.red}
format-discharging-padding = 0


